{
  "include": [ // src 폴더 안에 있는 타입스크립트들을 자바스크립트로 컴파일 하겠다.
    "src"
  ],
  "compilerOptions": {
    "outDir": "dist", // 컴파일된 자바스크립트들을 저장하는 폴더 지정. 여기서는 dist 폴더
    "target": "ESNext", // 컴파일 할 때 기준. var 등 ES5 에서 쓰는 방식을 ES6 까지 확장 (let, const 등 쓸 수 있음)
    "moduleResolution": "node", // 프로그램에서 사용할 모듈 시스템을 결정. 아래 module 과 같이 쓰인다.
    "module": "ESNext",
    "moduleDetection": "force", // 타입스크립트는 다른 파일에 존재하는 변수까지 인식. 중복되는 변수가 있으면 모듈화 시켜줌
    "strict": true // 강제로 엄격모드. 파라미터의 타입을 지정해줘야함. (매운맛 ver.)
  }
}
/* -------------------------------------------------------------------------- */
/*                                  터미널 설치 순서                                 */
/* -------------------------------------------------------------------------- */
